<body>
    <header>
        <div>
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active ">
                        <img src="https://www.10wallpaper.com/wallpaper/1366x768/1604/Blue_lake_evening_pier-Nature_High_Quality_Wallpaper_1366x768.jpg" alt="Los Angeles">
                    </div>

                    <div class="item">
                        <img src="https://www.10wallpaper.com/wallpaper/1366x768/1411/Night_Sky_With_Stars-Landscapes_HD_Wallpaper_1366x768.jpg" alt="Chicago">
                    </div>

                    <div class="item">
                        <img src="https://www.10wallpaper.com/wallpaper/1366x768/1604/Blue_lake_evening_pier-Nature_High_Quality_Wallpaper_1366x768.jpg" alt="New York">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 " id="nav_header">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i> Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@



                       @* // lấy user hiện tại đang đăng nhập*@
                      
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="TimeSheet" asp-action="CheckIn"><i class="fa-solid fa-receipt"></i> Check In</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="TimeSheet" asp-action="Index"><i class="fa-regular fa-money-bill-1"></i> Check out</a>
                            </li>


                            var user = await UserManager.GetUserAsync(User);
                            if (user != null && await UserManager.IsInRoleAsync(user, "Admin"))
                            {

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Manage" asp-action="Index"><i class="fa-solid fa-list-check"></i> ManageUser</a>
                                </li>


                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index"><i class="fa-regular fa-user"></i> Member</a>
                                </li>


                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Role" asp-action="Index"><i class="fa-brands fa-critical-role"></i> Role</a>
                                </li>



                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="TimeSheet" asp-action="ManageUserTimeSheets"><i class="fa-regular fa-calendar-days"></i> Chấm công cho nhân viên</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Statistical" asp-action="Index"><i class="fa-solid fa-chart-pie"></i> Thống Kê</a>
                                </li>
                            }
                        }

                    </ul>
                    @*<partial name="_LoginPartial" />*@
                </div>
            </div>
        </nav>
