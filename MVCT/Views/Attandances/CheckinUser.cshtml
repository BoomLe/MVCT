@using MVCT.Models.Attandance;
@model Attandances


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Checkin</h4>
<hr />
@if (ViewBag.Message is not null)
{
    <div class="row">
        <div class="col-md-4">
            <span class="alert alert-danger pt-1 pb-1 mb-2">@ViewData["Message"]</span>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <select asp-for="Id" class="form-control" asp-items="ViewBag.Id"></select>
            </div>
            <div class="form-group mt-1">
                <input type="submit" value="CheckIn" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Attandances" asp-action="Index">Back to Checkin List</a>
</div>

}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}